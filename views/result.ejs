<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Result</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body class="grey lighten-4">
    <div class="container mt-5">
        <div class="card">
            <div class="card-content">
                <h1 class="card-title">Personal Colors</h1>
                <div id="results" class="grey-text">Loading...</div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const result = localStorage.getItem('result');
            if (result) {
                try {
                    const jsonResult = JSON.parse(result);
                    const resultContainer = document.getElementById('results');
                    resultContainer.innerHTML = `
                        <h3><strong>Season:</strong> ${jsonResult.personal_color.season}</h3>
                        <p><strong>Description:</strong> ${jsonResult.personal_color.description}</p>
                        <p><strong>Suggested Colors:</strong> ${jsonResult.personal_color.suggested_colors}</p>
                        
                        <h3>Skin Undertone</h3>
                        <p><strong>Type:</strong> ${jsonResult.personal_color.skin_undertone.type}</p>
                        <p><strong>Description:</strong> ${jsonResult.personal_color.skin_undertone.description}</p>
                        
                        <h3>Hair Color</h3>
                        <p><strong>Color Family:</strong> ${jsonResult.personal_color.hair_color.color_family}</p>
                        <p><strong>Dominant Hex:</strong> ${jsonResult.personal_color.hair_color.dominant_hex}</p>
                        
                        <h3>Eye Color</h3>
                        <p><strong>Color Family:</strong> ${jsonResult.personal_color.eye_color.color_family}</p>
                        <p><strong>Dominant Hex:</strong> ${jsonResult.personal_color.eye_color.dominant_hex}</p>
                    `;
                } catch (error) {
                    document.getElementById('results').innerText = 'Error parsing result.';
                }
            } else {
                document.getElementById('results').innerText = 'No results available.';
            }
        });
    </script>
</body>
</html>
